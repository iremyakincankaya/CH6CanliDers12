@model Sehir


<h1 class="display-4">@Model.SehirAd Şehirindesiniz</h1>

<dl>
    <dt>Plaka</dt>
    <dd>@Model.Id.ToString("00")</dd>
    <dt>Nufüs</dt>
    <dd>@Model.Nufus.ToString("n0")</dd>
    <dt>Bölgesi</dt>
    <dd>@Model.Bolge.BolgeAd</dd>
</dl>

<a asp-controller="Bolge" asp-action="Index" asp-route-id="@Model.BolgeId" class="btn btn-primary">Şehirlere Dön</a>